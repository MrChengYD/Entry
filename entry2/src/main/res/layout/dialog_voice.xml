<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:paddingTop="30dp"
    android:paddingBottom="5dp"
    android:background="@color/activity_background">
    <View
        android:id="@+id/mic_voice_dialog_close"
        android:layout_width="@dimen/mic_dialog_close"
        android:layout_height="@dimen/mic_dialog_close"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_close"/>
    <TextView
        android:id="@+id/mic_tip_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/mic_dialog_upToSend"
        android:textColor="@color/google_green"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/mic_tip_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/mic_dialog_upToCancel"
        android:textColor="@color/google_red"
        android:textSize="20sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/mic_tip_tomeTooShort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/mic_dialog_timeTooShort"
        android:textColor="@color/google_red"
        android:textSize="20sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/mic_voice_dialog_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:textColor="@color/google_green"
        android:layout_marginBottom="60dp"/>
    <RelativeLayout
        android:id="@+id/mic_voice_dialog_decibel"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:alpha="0.6"
        android:background="@drawable/shape_corner_voice_dialog">
        <LinearLayout
            android:id="@+id/mic_decibel_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="@color/google_blue"/>
    </RelativeLayout>
</RelativeLayout>