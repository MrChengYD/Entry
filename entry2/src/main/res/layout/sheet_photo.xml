<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray_very_light"
            android:gravity="center">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/google_assistant_background"/>
            <LinearLayout
                android:id="@+id/sheet_photo_title_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/sheet_photo_close"
                    android:layout_width="@dimen/sheet_photo_title_height"
                    android:layout_height="@dimen/sheet_photo_title_height"
                    android:background="@drawable/icon_bottom_sheet_close"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sheet_photo_title_height">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/sheet_photo_title_height"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/sheet_photo_side_title"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="发送给"
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/sheet_photo_side_title_textSize"/>
                        <TextView
                            android:id="@+id/sheet_photo_main_title"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="ChengYingDone"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sheet_photo_main_title_textSize"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 / 9"
                            android:textSize="18sp"
                            android:textColor="@color/google_green"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_gravity="bottom">
            <GridLayout
                android:id="@+id/sheet_photo_gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_camera"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_camera"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_camera"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_camera"/>



            </GridLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>