<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_very_light">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/sheet_photo_pull"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingStart="80dp"
                android:paddingEnd="80dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"

                android:clickable="true"
                android:focusable="true">
                <View
                    android:layout_width="50dp"
                    android:layout_height="4dp"
                    android:background="@drawable/shape_corner_sheet_photo_pull"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/google_assistant_background"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/sheet_photo_close"
                    android:layout_width="@dimen/sheet_photo_title_height"
                    android:layout_height="@dimen/sheet_photo_title_height"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_bottom_sheet_close"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sheet_photo_title_height">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/sheet_photo_title_height"
                        android:layout_marginStart="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="5"
                            android:gravity="center_vertical"
                            android:text="已选择 2/6"
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/sheet_photo_main_title_textSize"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="发送给chengyingdong"
                            android:textColor="@color/black_overlay"
                            android:textSize="@dimen/sheet_photo_side_title_textSize"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">
            <GridLayout
                android:id="@+id/sheet_photo_gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_camera"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_camera"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_camera"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/icon_camera"/>



            </GridLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>